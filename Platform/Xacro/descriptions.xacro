<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="Maket">
     <xacro:include filename="inertials.xacro" />
     <xacro:include filename="sensors.urdf.xacro" />

     <link name="base_footprint" />
     <joint name="base_to_footprint" type="fixed">
          <parent link="base_footprint" />
          <child link="base_link" />
          <origin xyz="0 0 0" rpy="0 0 0" />
     </joint>


     <link name = "base_link">
          <visual>
               <origin xyz = "0 0 0" rpy = "0 0 0" />
               <geometry>
                    <mesh filename="package://Maket/meshes/base_link.STL" />
               </geometry>
               <material name="Maket">
          </visual>
          <collision>
               <origin xyz= "0 0 0" rpy="0 0 0" />
               <geometry>     
                    <mesh filename="package://Maket/meshes/base_link.STL" />
               </geometry>
          </collision>
          <!-- <inertial> -->
          <xacro:Maket mass = "4"/>
          <!-- <inertial/> -->
     </link>
     <!-- <Right_Wheel> -->
     </link name = "Right_Wheel">
          <visual>
               <origin xyz = "0 0 0" rpy = "0 0 0" />
               <geometry>
                    <mesh filename = "package://Maket/meshes/right_wheel.STL"/>
               </geometry>
               <material name = "Right_Wheel"/>
          </visual>
          <collision>
               <origin xyz = "0 0 0" rpy = "0 0 0" />
               <geometry>
                    <mesh filename = "package://Maket/meshes/right_wheel.STL"/>
               </geometry>
          </collision>
          <!-- <inertial> -->
          <xaccro:Right_Wheel mass = "0.077714"/>
          <!-- <inertial/> -->
     </link>
     <joint name="RightWheel" type="continuous">
          <origin
               xyz="0.059148 -0.2 0.021"
               rpy="-1.5708 0 0" 
          />
          <parent 
               link="base_link" />
          <child  
               link="Right_Wheel" />
          <axis   
               xyz="0 0 1" />
          <limit  
               effort="10" 
               velocity="10" />
          <dynamics 
               damping="0.1"
               friction="0.1" />
     </joint>
     <!-- </Right_Wheel> -->
     <!-- <Left_Wheel> -->
     </link name = "Left_Wheel">
          <visual>
               <origin xyz = "0 0 0" rpy = "0 0 0" />
               <geometry>
                    <mesh filename = "package://Maket/meshes/left_wheel.STL"/>
               </geometry>
               <material name = "Left_Wheel"/>
          </visual>
          <collision>
               <origin xyz = "0 0 0" rpy = "0 0 0" />
               <geometry>
                    <mesh filename = "package://Maket/meshes/left_wheel.STL"/>
               </geometry>
          </collision>
          <!-- <inertial> -->
          <xaccro:Left_Wheel mass = "0.077714"/>
          <!-- <inertial/> -->
     </link>
     <joint name="LeftWheel" type="continuous">
          <origin
               xyz="0.059148 0.2 0.021"
               rpy="-1.5708 0 0" 
          />
          <parent 
               link="base_link" />
          <child  
               link="Left_Wheel" />
          <axis   
               xyz="0 0 1" />
          <limit  
               effort="10" 
               velocity="10" />
          <dynamics 
               damping="0.1"
               friction="0.1" />
     </joint>
     <!--</Left_Whell>-->

     <xacro:imu />

     <xacro:laser>
          <origin xyz="0 0 0.33" rpy="0 0 0" />
     </xacro:laser>

     <link name="aruco">
          <visual>
               <origin xyz="0 0 0" rpy="0 0 0" />
               <geometry>
                    <box size="0.10 0.10 0.02" />
               </geometry>
               <material name="blue">
                    <color rgba="0 0 1 1.0" />
               </material>
          </visual>
          <collision>
               <origin xyz="0 0 0" rpy="0 0 0" />
               <geometry>
                    <box size="0.10 0.10 0.02" />
               </geometry>
          </collision>
     </link>
     <joint name="aruco" type="fixed">
          <parent link="base_link" />
          <child link="aruco" />
          <origin xyz="-0.09 0 0.26" rpy="0 0 0" />
     </joint>


</robot>    