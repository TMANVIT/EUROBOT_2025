<root main_tree_to_execute="MainTree">
  <BehaviorTree ID="MainTree">
    <RecoveryNode number_of_retries="1">
      <PipelineSequence>
        <ComputePathToPose goal="{goal}" planner="SmacHybrid"/>
        <FollowPath path="{path}" controller="MPPI"/>
      </PipelineSequence>
      <ReactiveFallback>
        <FollowPath path="{path}" controller="PurePursuit"/>
        <ClearEntireCostmap name="ClearCostmap"/>
      </ReactiveFallback>
    </RecoveryNode>
  </BehaviorTree>
</root>